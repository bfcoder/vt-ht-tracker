<div class="text-center">
  <button {{action 'createNewSister'}} class="btn btn-default new-sister">New Sister</button>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="text-center">Teachers</th>
        <th class="text-center">Sisters taught</th>
        <th class="text-center">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedActiveSisters as |sister|}}
        {{#unless sister.isNew}}
          <tr>
            <td class="text-center">{{sister.teachers}}</td>
            <td class="text-center">{{sister.fullName}}</td>
            <td class="text-center">
              <button {{action 'showModal' 'sister-modal' sister}} class="btn btn-default btn-xs">Edit</button>
              <button {{action 'disableSister' sister}} class="btn btn-default btn-xs">Disable</button>
            </td>
          </tr>
        {{/unless}}
      {{/each}}
    </tbody>
  </table>
</div>

<div class="text-center">
  <label>Disabled Sisters</label>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="text-center">Teachers</th>
        <th class="text-center">Sisters taught</th>
        <th class="text-center">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedDeactiveSisters as |sister|}}
        {{#unless sister.isNew}}
          <tr>
            <td class="text-center">{{sister.teachers}}</td>
            <td class="text-center">{{sister.fullName}}</td>
            <td class="text-center">
              <button {{action 'showModal' 'sister-modal' sister}} class="btn btn-default btn-xs">Edit</button>
              <button {{action 'enableSister' sister}} class="btn btn-default btn-xs">Enable</button>
              <button {{action 'showModal' 'sister-delete-modal' sister}} class="btn btn-default btn-xs">Delete</button>
            </td>
          </tr>
        {{/unless}}
      {{/each}}
    </tbody>
  </table>
</div>
