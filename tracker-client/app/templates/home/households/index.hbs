<div class="text-center">
  <button {{action 'createNewHousehold'}} class="btn btn-default new-household">New Household</button>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="text-center">Teachers</th>
        <th class="text-center">Household</th>
        <th class="text-center">District</th>
        <th class="text-center">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedHouseholds as |household|}}
        {{#unless household.isNew}}
          <tr>
            <td class="text-center">{{household.teachers}}</td>
            <td class="text-center">{{household.name}}</td>
            <td class="text-center">{{household.district.name}}</td>
            <td class="text-center">
              <button {{action 'showModal' 'household-modal' household}} class="btn btn-default btn-xs">Edit</button>
              <button {{action 'showModal' 'household-delete-modal' household}} class="btn btn-default btn-xs">Delete</button>
            </td>
          </tr>
        {{/unless}}
      {{/each}}
    </tbody>
  </table>
</div>
