<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>{{peopleTitle}}</th>
        <th>{{previousMonth}}</th>
        <th>Notes</th>
        <th>{{currentMonth}}</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      {{#each person in sortedPeople}}
        {{#unless person.isNew}}
          <tr>
            <td>{{person.fullName}}</td>
            {{#each visit in person.visits itemController='visit'}}
              <td>{{visit.statusHumanize}}</td>
              <td>{{visit.notes}}</td>
            {{/each}}
          </tr>
        {{/unless}}
      {{/each}}
      <tr>
        <td>
          Percents
        </td>
        <td>
          {{previousMonthPercentVisited}}% Visited
        </td>
        <td></td>
        <td>
          {{currentMonthPercentVisited}}% Visited
        </td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>
