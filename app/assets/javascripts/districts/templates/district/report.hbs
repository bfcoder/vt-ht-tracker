<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Sister</th>
        <th>{{previousMonth}}</th>
        <th>{{currentMonth}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each sister in sortedSisters}}
        <tr>
          <td>{{sister.fullName}}</td>
          {{#each visit in sister.visits itemController='visit'}}
            <td>{{visit.statusHumanize}}</td>
          {{/each}}
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
