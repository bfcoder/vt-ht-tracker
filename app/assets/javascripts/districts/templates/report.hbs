<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="report-people-title">{{peopleTitle}}</th>
        <th class="report-month">{{previousMonth}}</th>
        <th class="report-notes">Notes</th>
        <th class="report-month">{{currentMonth}}</th>
        <th class="report-notes">Notes</th>
      </tr>
    </thead>
    <tbody>
      {{#each district in sortedDistricts itemController='districtReport'}}
        {{#if district.sortedPeople}}
          <tr>
            <td>
              {{district.name}}
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          {{#each person in district.sortedPeople}}
            {{#unless person.isNew}}
              <tr>
                <td>{{person.fullName}}</td>
                {{#each visit in person.visits itemController='visit'}}
                  <td>{{visit.statusHumanize}}</td>
                  <td>{{visit.notes}}</td>
                {{/each}}
              </tr>
            {{/unless}}
          {{/each}}
        {{/if}}
      {{/each}}
      <tr>
        <td>
          Percents
        </td>
        <td>
          {{previousMonthPercentVisited}}% Visited
        </td>
        <td></td>
        <td>
          {{currentMonthPercentVisited}}% Visited
        </td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>
