<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h2>Sign up</h2>
    </div>
  </div>

  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', role: 'form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username, for: 'inputUsername', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-5">
          <%= f.text_field :username, id: 'inputUsername', class: 'form-control', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, for: 'inputEmail', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-5">
          <%= f.email_field :email, id: 'inputEmail', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, for: 'inputPassword', class: 'col-sm-2 control-label' %>
        <div class="col-sm-5">
          <%= f.password_field :password, id: 'inputPassword', class: 'form-control', autocomplete: "off", placeholder: "(#{@minimum_password_length} characters minimum)" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, for: 'inputPasswordConfirmation', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-5">
          <%= f.password_field :password_confirmation, id: 'inputPasswordConfirmation', class: 'form-control', autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sign up", class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
