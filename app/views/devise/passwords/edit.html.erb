<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h2>Change your password</h2>
    </div>
  </div>

  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal', role: 'form' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password", for: 'inputPassword', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-5">
          <%= f.password_field :password, id: 'inputPassword', class: 'form-control', autofocus: true, autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password", for: 'inputPasswordConfirmation', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-5">
          <%= f.password_field :password_confirmation, id: 'inputPasswordConfirmation', class: 'form-control', autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Change my password", class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
