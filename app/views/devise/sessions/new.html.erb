<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h2>Log in</h2>
    </div>
  </div>

  <div class="panel-body">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal', role: 'form' }) do |f| %>

      <div class="form-group">
        <%= f.label :login, for: 'inputlogin', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-5">
          <%= f.text_field :login, id: 'inputlogin', class: 'form-control', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, for: 'inputPassword', class: 'col-sm-2 control-label' %><br />
        <div class="col-sm-5">
          <%= f.password_field :password, id: 'inputPassword', class: 'form-control', autocomplete: "off" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
              <label>
                <input type="checkbox"> Remember me
              </label>
            </div>
          </div>
        </div>
      <% end -%>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Log in", class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
